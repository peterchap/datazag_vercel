# API Gateway Environment Configuration

# Server Settings
PORT=3000
NODE_ENV=development

# Security Settings
JWT_SECRET=your_jwt_secret_key_here
API_SERVICE_KEY=your_service_key_here

# CORS Settings (Comma-separated list of allowed origins)
ALLOWED_ORIGINS=https://your-firebase-app.web.app,http://localhost:5000

# Database Connection
DATABASE_URL=postgresql://username:password@your-cloud-server:5432/your_database_name

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes in milliseconds
RATE_LIMIT_MAX_REQUESTS=100  # Maximum requests per window

# Logging
LOG_LEVEL=info
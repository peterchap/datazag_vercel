# API Gateway Configuration
NEXT_PUBLIC_API_GATEWAY_URL=https://apipg.datazag.com
NEXT_PUBLIC_API_SERVICE_URL=https://api.datazag.com

# NextAuth Configuration (for authentication)
NEXTAUTH_SECRET=your_nextauth_secret_key
NEXTAUTH_URL=http://localhost:3000

# Stripe Configuration (Frontend)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_public_key

# Service URLs
FASTAPI_SERVICE_URL=https://your-fastapi-service-url.com

# Environment Settings
NODE_ENV=development

################################################
#    API GATEWAY SERVER ENVIRONMENT VARIABLES   #
################################################

# API Gateway Server Config
PORT=3000
NODE_ENV=production
JWT_SECRET=your_jwt_secret_key_for_tokens
API_SERVICE_KEY=your_internal_service_api_key

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,https://your-vercel-app.vercel.app
CORS_ALLOW_ALL=false

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes in milliseconds
RATE_LIMIT_MAX_REQUESTS=100   # Max requests per IP in the window

# Database Configuration
DATABASE_URL=postgresql://username:password@hostname:port/database_name
DB_USE_SSL=true  # Set to 'false' only for local development without SSL

# External Service Integration
FASTAPI_SERVICE_URL=https://your-fastapi-bigquery-service.com

# NextAuth Configuration
NEXTAUTH_SECRET=your_nextauth_secret_key_here
NEXTAUTH_URL=http://localhost:3000